@model IEnumerable<QuanLyThuVien.Models.Blog>

@{
	ViewData["Title"] = "Index";
	var blogs = Model?.ToList(); // Use the null-conditional operator to handle null case

	while (blogs.Count < 9)
	{
		blogs.Add(new QuanLyThuVien.Models.Blog { Title = "Sample Blog", Content = "Sample Content", ImageUrl = "https://placeholder.com/150" });
	}

	var firstBlog = blogs.FirstOrDefault();
	var secondToFive = blogs.Skip(1).Take(4).ToList(); // Get the second to fifth blog posts
	var restBlog = blogs.Skip(5).ToList(); // Get the rest of the blog posts



}

<!-- Your HTML code for displaying blog posts -->

<a class="btn btn-primary" asp-action="Create">Tạo bài viết</a>


<div class="container mt-4">
	<div class="row container-main-blog">

		<div class="col-md-6 text-danger">
			<img class="img-fluid" style="max-width: 100%;" src="@firstBlog.ImageUrl" alt="Image 1" />
			<div style="margin: 20px 0"></div>
			<a asp-action="Details" asp-controller="Blog" asp-route-id="@firstBlog.Id">
				<h1>@firstBlog.Title</h1>
			</a>
		</div>

		<!--4 blogs-->
		<div class="col-md-6 text-success">

			@foreach (var item in secondToFive)
			{
				<div class="left-side-blog-container">
					<img class="left-side-blog img-fluid img-fixed" src="@item.ImageUrl" alt="Image 2" />
					<a asp-action="Details" asp-controller="Blog" asp-route-id="@item.Id">
						<h4>@item.Title</h4>
					</a>

				</div>
			}
		</div>
	</div>
</div>


<div class="container mt-4 text-primary container-list-blog">
	<div class="row">

		@foreach (var item in restBlog)
		{
			<div class="col-md-3">
				<div class="card">
					<img class="card-img-top img-fluid" src="@item.ImageUrl" alt="Card image cap" />
					<div class="card-body">
						<h3 class="card-text">@item.Title</h3>
					</div>
				</div>
			</div>
		}


	</div>

	<style>
		.left-side-blog {
			max-width: 150px;
			margin-bottom: 8px;
		}

		.left-side-blog-container {
			display: flex;
		}

		.container-main-blog, .container-list-blog {
			background: white;
			padding: 15px;
			border-radius: 10px;
		}

		.card-img-top {
			width: 100%; /* Đảm bảo ảnh đầy đủ chiều rộng của khung */
			height: 250px; /* Đặt chiều cao cố định cho khung ảnh */
			object-fit: cover; /* Giữ nguyên tỷ lệ khung, cắt bớt phần dư thừa của ảnh */
		}

		.img-fixed {
			width: 100%;
			height: 100px;
			object-fit: cover;
		}

	</style>

	<p>
		
	</p>
	<table class="table">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Title)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Content)
				</th>

				<th>
					@Html.DisplayNameFor(model => model.ImageUrl)
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Title)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Content)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.ImageUrl)
					</td>
					<td>
						<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
						<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
						<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
