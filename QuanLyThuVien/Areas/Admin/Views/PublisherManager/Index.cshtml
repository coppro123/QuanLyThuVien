@model IEnumerable<QuanLyThuVien.Models.Publisher>

@{
	ViewData["Title"] = "Index";
}

<p>
	<a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Address)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.PhoneNumber)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Address)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.PhoneNumber)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td>
					<a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
					<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<style>
	/* General table styles */
	table {
		width: 100%; /* Ensures table fills the container */
		border-collapse: collapse; /* Removes borders between cells */
		background-color: #f5f5f5; /* Light background color */
	}

	th, td {
		padding: 10px 15px; /* Consistent padding for cells */
		border: 1px solid #ddd; /* Thin border for separation */
		text-align: left; /* Left-align text by default */
	}

	th {
		background-color: #e0f2ff; /* Light blue background for headers */
		font-weight: bold; /* Bold headers for emphasis */
	}

	td:nth-child(6) { /* Cell for quantity */
		text-align: center; /* Center quantity for better visibility */
	}

	td img {
		max-width: 100%; /* Image scales proportionally within cell */
		height: auto; /* Maintain aspect ratio of image */
	}

	/* Optional: Striped rows for visual interest */
	tr:nth-child(even) {
		background-color: #fff; /* Lighter background color for even rows */
	}
</style>