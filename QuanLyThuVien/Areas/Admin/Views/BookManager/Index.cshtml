@model IEnumerable<QuanLyThuVien.Models.Book>

@{
	ViewData["Title"] = "Index";
}

<p class="">
	<a class="btn btn-success" asp-area="Admin" asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Title)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Author)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Publisher)
			</th>
			<th>
				Năm XB
			</th>
			<th>
				Thể Loại
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Quantity)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ImageUrl)
			</th>
			
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					<a class="text-decoration-none" asp-action="Details" asp-controller="BookManager" asp-route-id="@item.Id">
						@Html.DisplayFor(modelItem => item.Title)
					</a>
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Author)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Publisher.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.YearPublished)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Category.Name)
				</td>

				<td style="color: @(item.Quantity == 0 ? "red" : "green")">
					@Html.DisplayFor(modelItem => item.Quantity)
				</td>

				<td>
					<img style="max-height: 100px" src="@item.ImageUrl" alt="Alternate Text" />
				</td>
				
			</tr>
		}
	</tbody>
</table>

<style>
	/* General table styles */
	table {
		width: 100%; /* Ensures table fills the container */
		border-collapse: collapse; /* Removes borders between cells */
		background-color: #f5f5f5; /* Light background color */
	}

	th, td {
		padding: 10px 15px; /* Consistent padding for cells */
		border: 1px solid #ddd; /* Thin border for separation */
		text-align: left; /* Left-align text by default */
	}

	th { /* Vibrant blue background for headers */
		color: green; /* White text for contrast */
		font-weight: bold; /* Bold headers for emphasis */
	}

	td:nth-child(6) { /* Cell for quantity */
		text-align: center; /* Center quantity for better visibility */
	}

	td img {
		max-width: 100%; /* Image scales proportionally within cell */
		height: auto; /* Maintain aspect ratio of image */
	}

	/* Optional: Striped rows for visual interest */
	tr:nth-child(even) {
		background-color: #fff; /* Lighter background color for even rows */
	}
</style>
